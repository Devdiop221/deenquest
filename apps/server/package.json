{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "bun run --hot src/index.ts",
    "start": "bun run dist/index.js",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run src/db/seed.ts",
    "db:add-questions": "bun run src/db/add-more-questions.ts",
    "db:full-quiz": "bun run src/db/create-full-quiz-set.ts",
    "db:summary": "bun run src/db/quiz-summary.ts",
    "db:clean": "bun run src/db/clean-duplicates.ts",
    "db:seed-badges": "bun run src/db/seed-badges.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.0",
    "@hono/trpc-server": "^0.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@trpc/client": "^11.4.2",
    "@trpc/server": "^11.4.2",
    "better-auth": "^1.3.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.8.2",
    "pg": "^8.16.3",
    "zod": "^4.0.2"
  },
  "trustedDependencies": [
    "supabase"
  ],
  "devDependencies": {
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "@types/bun": "^1.2.6",
    "drizzle-kit": "^0.31.2",
    "@types/pg": "^8.11.11",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2"
  }
}
